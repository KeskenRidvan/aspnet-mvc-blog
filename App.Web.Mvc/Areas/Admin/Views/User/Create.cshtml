@model App.Persistence.Data.Entity.User

<div class="container">

  <div class="row mb-2">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h5>Kullanıcı Oluştur</h5>
          @*<div asp-validation-summary="All"></div>*@
        </div>
        <div class="card-body">
          <form asp-controller="User" asp-action="Create" method="post" class="d-flex align-items-center">
            <div class="container">

              <div class="row mb-4">
                <div class="col">
                  <label asp-for="Name" class="mb-2"></label>
                  <input type="text" asp-for="Name" class="form-control" placeholder="Ad" />
                  <span asp-validation-for="Name" class="text-danger"></span>
                </div>
              </div>
              <div class="row mb-4">
                <div class="col">
                  <label asp-for="Surname" class="mb-2"></label>
                  <input type="text" asp-for="Surname" class="form-control" placeholder="Soyad" />
                  <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
              </div>
              <div class="row mb-4">
                <div class="col">
                  <label asp-for="Email" class="mb-2"></label>
                  <input type="text" asp-for="Email" class="form-control" placeholder="E-mail" />
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              </div>
              <div class="row mb-4">
                <div class="col">
                  <label asp-for="Password" class="mb-2"></label>
                  <input type="text" asp-for="Password" class="form-control" placeholder="Şifre" />
                  <span asp-validation-for="Password" class="text-danger"></span>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col">
                  <button type="submit" class="btn btn-warning" style="width:150px">Oluştur</button>
                  <a asp-controller="User" asp-action="Index" class="btn btn-primary" style="width:150px">Listeye Dön</a>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>